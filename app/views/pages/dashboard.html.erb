<% content_for :title do %> - Dashboard<% end %>



<h2>
    Nearby Stops
</h2>

<div id="stops_near">

</div>

<% if current_user %>
    <h2>
    	<%= image_tag "star.svg", width: "30px", class: "star" %>
    	Favorite Stops
    </h2>
    <div id="stops_fav">
        <% current_user.issues.all.each do |f| %>
            <span class="stop_favorite"> <%= f %>
                <span class="issue-at-stop">
                    <% f.Issue.all.each do |g| %>
                        <%= f %>
                    <% end %>
                </span>
            </span> <br />

        <% end %>
    </div>
<% end %>
