<div class="homepage">
  <div class="hero">
    <%= image_tag "caravan_logo.svg", class: "logo", alt: "Caravan Logo" %>

    <h1>
      Report and View Public Transit Issues in
      <% # TODO: Make this print a setting city name %>
      <%= "Chicago" %>
    </h1>

    <%= link_to('Learn More', page_path(:page_name => 'about'), :class => 'simple-btn') %>
    <%= link_to('Sign In', new_user_session_path, :class => 'simple-btn') %>
  </div>

  <h2>Report An Issue</h2>

  <div class="transit-btn-cont">
    <div class="blue-btn transit">
      Bus
      <%= image_tag "bus_white.svg", alt: '' %>
    </div>

    <div class="blue-btn transit">
      Train
      <%= image_tag "train_white.svg", alt: '' %>
    </div>
  </div>

  <div class="view-issues-cont">
    <%= link_to('View Issues', view_issues_path, :class => 'blue-btn') %>
  </div>
</div>
