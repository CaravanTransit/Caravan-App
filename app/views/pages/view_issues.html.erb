<% content_for :title do %> - View Issues<% end %>

<div class="page-container">
    <h2>
        View Issues
    </h2>

	<div style="text-align: right;">
		<span># of issues</span>
	</div>

	<%= render "issues/split_button" %>

	<div id="lines_near" class="toggleable-list">
		<% if @nearby_lines %>
            <%= render "shared/striped_table", table_collection: @nearby_lines, row_partial:"lines/show_with_issues"%>
        <% else %>
            <em class="placeholder">We can't show you nearby stops without location services allowed!</em>
        <% end %>
	</div>


    <div id="stops_near" class="toggleable-list" style="display: none;">
        <% if @nearby_lines %>
            <%= render "shared/striped_table", table_collection: @nearby_stops, row_partial:"stops/show_with_issues"%>
        <% else %>
            <em class="placeholder">We can't show you nearby stops without location services allowed!</em>
        <% end %>
    </div>

	<%= render "issues/back_button" %>
</div>

<%= new_issue_button %>