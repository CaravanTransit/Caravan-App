<% lines.uniq.each do |line| %>
	<% unless defined? current_line and line == current_line %>
		<div class="line-tile">
			<%= link_to line_path(line) do %>
				<% if line.color %>
					<div class="line-swatch" style="background: #<%= line.color %>"></div>
				<% else %>
					<div class="api-id"><%= line.name %></div>
				<% end %>
			<% end %>
		</div>
	<% end %>
<% end %>
