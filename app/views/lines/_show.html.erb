<div class="line-partial">
	<div class="issue-card">
		<span>
			<% if line.bus? %>
				<%= image_tag "bus.svg", alt: '' %>
			<% else %>
				<span style="width: 5px; background-color: #<%= line.color %>">&nbsp;</span>
				<%= image_tag "train.svg",alt: '' %>
			<% end %>
			<%= link_to line.name, line %>
			<% if user_signed_in? %>
				<% if current_user.favorites.include?(line) %>
					<%= render "favorites/favorite", line: line %>
				<% else %>
					<%= render "favorites/unfavorite", line: line %>
				<% end %>
				<%= new_issue_button(line: line) %>
			<% end %>
		</span>
		<span>
			<%= line.issues.length %>
		</span>
	</div>
</div>

<style>
	.issue-card {
		display: flex;
		justify-content: space-between;
	}

	.issue-card span {
		margin-right: 5px;
	}

	img {
		color: black;
		height: 4vh;
		width: 4vh;
	}

</style>